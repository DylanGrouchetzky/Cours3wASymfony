{% extends 'admin/base.html.twig' %}

{% block title %}Espace Admin - Catégories{% endblock %}

{% block body %}
<div class="row">
    <div class="col-10 mx-auto">
        {% for message in app.flashes %}
            <div class="alert alert-dismissible alert-success">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <p>
                    <strong>Succes</strong><br>
                    {{message[0]}}
                </p>
            </div>
        {% endfor %}
        <div class="d-flex justify-content-between align-items-center">
            <h2>Catégorie</h2>
            <a href="{{path('app_admin_category_add_category')}}" class="btn btn-warning btn-sm"><i class="feather-plus"></i> Ajouter une Catégorie</a>
        </div>
        {% if categories|length > 0 %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{category.name}}</td>
                            <td>{{category.description}}</td>
                            <td class="d-flex">
                                <a href="{{path('app_admin_category_add_category',{'id':category.id})}}" class="btn btn-primary"><i class="feather-edit"></i>Editer</a>
                                <a type="button" href="{{path('app_admin_category_remove', {'id':category.id})}}" class="btn btn-danger"><i class="feather-trash-2"></i>Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Il n'y as pas encore de catégorie</p>
        {% endif %}
    </div>
</div>
    
{% endblock %}
