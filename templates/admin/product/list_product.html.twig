{% extends 'admin/base.html.twig' %}

{% block title %}Espace Admin - Product{% endblock %}

{% block body %}
<div class="row">
    <div class="col-10 mx-auto">
        {% for message in app.flashes %}
            <div class="alert alert-dismissible alert-success">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <p>
                    <strong>Succes</strong><br>
                    {{message[0]}}
                </p>
            </div>
        {% endfor %}
        <div class="d-flex justify-content-between align-items-center">
            <h2>Product</h2>
            <a href="{{path('app_admin_add_product')}}" class="btn btn-warning btn-sm"><i class="feather-plus"></i> Ajouter un Produit</a>
        </div>
        {% if products|length > 0 %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Catégorie</th>
                        <th>Date de Création</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{product.name}}</td>
                            <td>{{product.price}}€</td>
                            <td>{{product.category.name}}</td>
                            <td>{{product.createdAt|date('d/m/Y')}}</td>
                            <td><a href="{{path('app_admin_add_product', {'id':product.id})}}" class="btn btn-primary"><i class="feather-edit"></i> Editer</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Il n'y as pas encore de produits</p>
        {% endif %}
    </div>
</div>
    
{% endblock %}
