{% extends 'admin/base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Espace Admin - Ajouter un Produit{% endblock %}

{% block body %}
<div class="row">
    <div class="col-10 mx-auto">
        <h1>{{block ('title')}}</h1>
        {{form_start(form)}}
            <div class="form-group">
                {{form_label(form.item)}}
                <div class="col-sm-10">
                    {{form_widget(form.item)}}
                </div>
            </div>
            <div class="form-group">
                {{form_label(form.route)}}
                <div class="col-sm-10">
                    {{form_widget(form.route)}}
                </div>
            </div>
            <div class="form-group">
                {{form_label(form.paramRoute)}}
                <div class="col-sm-10">
                    {{form_widget(form.paramRoute)}}
                </div>
            </div>
            {{form_row(form.submit, {'label': 'Ajouter l\'item'})}}
        {{form_end(form)}}
    </div>
</div>

{% endblock %}
