{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
<div class="p-3">
    <h1>{{ block ('title') }}</h1>
    {% if categories|length > 0 %}
        <ul>
            {% for category in categories %}
                <li><a href="{{path('app_list_products', {'category': category.id})}}">{{category.name}}</a></li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Désoler il n'y as pas de catégorie</p>
    {% endif %}
    
</div>
{% endblock %}
